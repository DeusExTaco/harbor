# Harbor Container Updater - Development Dockerfile
# Optimized for fast development cycles with hot reload
# Supports build arguments for multi-architecture optimization

# Accept build arguments for multi-platform builds (for CI compatibility)
ARG BUILDPLATFORM=linux/amd64
ARG TARGETPLATFORM=linux/amd64
ARG DEBIAN_FRONTEND=noninteractive
ARG PIP_DISABLE_PIP_VERSION_CHECK=1
ARG PYTHONDONTWRITEBYTECODE=1

FROM python:3.13-slim

# Set environment variables directly (avoids undefined variable warnings)
ENV DEBIAN_FRONTEND=noninteractive \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONDONTWRITEBYTECODE=1

# Install system dependencies with flexible versions
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    curl \
    ca-certificates \
    git \
    build-essential \
    vim \
    htop \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create harbor user
RUN groupadd -r harbor && useradd -r -g harbor harbor

# Set working directory
WORKDIR /app

# Python environment (hadolint compliant - removed PIP_NO_CACHE_DIR)
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=${PYTHONDONTWRITEBYTECODE:-1} \
    PIP_DISABLE_PIP_VERSION_CHECK=${PIP_DISABLE_PIP_VERSION_CHECK:-1}

# Copy requirements and install dependencies
COPY requirements/ ./requirements/
COPY pyproject.toml ./

# Install all dependencies with hadolint compliance
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -e ".[dev]"

# Copy application code
COPY --chown=harbor:harbor . .

# Create development directories
RUN mkdir -p /app/data /app/logs /app/config && \
    chown -R harbor:harbor /app

# Switch to harbor user
USER harbor

# Development environment
ENV HARBOR_MODE=development \
    LOG_LEVEL=DEBUG \
    DEV_RELOAD=true \
    ENABLE_AUTO_DISCOVERY=true

# Expose port
EXPOSE 8080

# Health check for development
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD python scripts/health_check.py || exit 1

# Development command with hot reload
CMD ["python", "-m", "uvicorn", "app.main:create_app", "--factory", "--host", "0.0.0.0", "--port", "8080", "--reload"]

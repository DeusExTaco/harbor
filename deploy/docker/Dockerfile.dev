# Harbor Container Updater - Development Dockerfile
# Optimized for fast development cycles with hot reload

FROM python:3.13-slim

# Install system dependencies with flexible versions
RUN apt-get update && apt-get install -y \
    --no-install-recommends \
    curl \
    ca-certificates \
    git \
    build-essential \
    vim \
    htop \
    && rm -rf /var/lib/apt/lists/*

# Create harbor user
RUN groupadd -r harbor && useradd -r -g harbor harbor

# Set working directory
WORKDIR /app

# Python environment
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

# Copy requirements and install dependencies
COPY requirements/ ./requirements/
COPY pyproject.toml ./

# Install all dependencies with flexible pip version
RUN pip install --upgrade pip && \
    pip install -e ".[dev]"

# Copy application code
COPY --chown=harbor:harbor . .

# Create development directories
RUN mkdir -p /app/data /app/logs /app/config && \
    chown -R harbor:harbor /app

# Switch to harbor user
USER harbor

# Development environment
ENV HARBOR_MODE=development \
    LOG_LEVEL=DEBUG \
    DEV_RELOAD=true \
    ENABLE_AUTO_DISCOVERY=true

# Expose port
EXPOSE 8080

# Health check for development
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8080/healthz || exit 1

# Development command with hot reload
CMD ["python", "-m", "uvicorn", "app.main:create_app", "--factory", "--host", "0.0.0.0", "--port", "8080", "--reload"]

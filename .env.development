# Harbor Development Environment
HARBOR_MODE=development
HARBOR_SECRET_KEY=dev-secret-key-change-in-production
HARBOR_TIMEZONE=America/New_York

# Development database
DATABASE_URL=sqlite:///data/harbor_dev.db

# Docker configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TIMEOUT=60

# Security (relaxed for development)
REQUIRE_HTTPS=false
SESSION_TIMEOUT_HOURS=168
API_RATE_LIMIT_PER_HOUR=10000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_RETENTION_DAYS=7

# Updates
DEFAULT_CHECK_INTERVAL_SECONDS=300
MAX_CONCURRENT_UPDATES=1

# Features enabled for development
ENABLE_AUTO_DISCOVERY=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_GETTING_STARTED=true

# Development specific
DEV_RELOAD=true
DEV_MOCK_DOCKER=false
